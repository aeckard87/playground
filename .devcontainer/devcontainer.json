{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "docker volume create grafana-storage && docker run -d -p 3000:3000 --name=grafana  --volume grafana-storage:/var/lib/grafana  grafana/grafana-enterprise",
  "postCreateCommand": "./code_space.sh",
  "postAttachCommand": {
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md"
      ],
      "vscode": {
        "extensions": [
          "DavidAnson.vscode-markdownlint",
          "GitHub.codespaces",
          "GitHub.github-vscode-theme",
          "GitHub.vscode-pull-request-github",
          "hashicorp.terraform",
          "ms-azuretools.vscode-docker",
          "redhat.vscode-yaml"
        ]
      }
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000]
}
